{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015", 
    "lib": ["es5", "dom"],
    "outDir": "./lib/esm/",
    "declaration": true,
    "declarationDir": "./lib/types",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    //"allowJs": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}